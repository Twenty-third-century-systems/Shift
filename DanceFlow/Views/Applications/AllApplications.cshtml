@{
    ViewBag.Title = "Applications";
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluId">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">All applications</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Applications / <span class="text-muted">All applications</span></a>
                    </li>
                    @* <li class="breadcrumb-item active">Starter Page</li> *@
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluId -->
</div>
<!-- /.content-header -->

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <a class="btn btn-info btn-block mb-3">Applications</a>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Services</h3>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item" id="nameSearchSelector">
                            <a class="nav-link" id="nav-name-search">
                                <i class="fas fa-signature"></i> Name searches
                                <span class="badge bg-primary float-right" id="nameSearchCount">0</span>
                            </a>
                        </li>
                        <li class="nav-item" id="pvtEntitySelector">
                            <a class="nav-link">
                                <i class="far fa-building"></i> Pvt Limited Entity
                                <span class="badge bg-primary float-right" id="pvtEntityCount">0</span>
                            </a>
                        </li>
