                    <div class="card-header">
                        <h3 class="card-title">Allocate tasks</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Service</label>
                                    <select class="form-control select2" name="service">
                                        <option selected="selected"></option>
                                        <option value="0">NAME SEARCH</option>
                                        <option value="0">PUBLIC LIMITED COMPANY</option>
                                    </select>
