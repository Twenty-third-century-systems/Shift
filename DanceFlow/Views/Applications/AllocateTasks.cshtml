                                    <input type="date" class="form-control" name="expectedDateOfCompletion">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Examiner </label>
                                    <select class="form-control select2" name="examiner">
                                        <option selected="selected"></option>
                                        @foreach (var examiner in ViewBag.Examiners)
                                        {
                                            <option value="@examiner.Id">@examiner.FullName</option>
                                        }

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Number of applications</label>
                                    <input type="text" class="form-control" name="numberOfApplications">
                                </div>
