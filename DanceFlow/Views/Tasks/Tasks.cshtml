@{
    ViewBag.Title = "Tasks";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluId">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Pending Tasks</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Tasks / <span class="text-muted">Pending Tasks</span></a>
                        </li>
                        @* <li class="breadcrumb-item active">Starter Page</li> *@
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluId -->
    </div>
    <!-- /.content-header -->

    <div class="container-fluid" id="parent-container">
        <div class="row">
            <div class="col-lg-6">
                <div class="card direct-chat direct-chat-primary bottom-dashboard-card elevation-1" id="name-search-tasks">
                    <div class="card-header">
                        <h3 class="card-title">Name search</h3>
                        <div class="card-tools">
                            <button class="btn btn-tool" data-card-widget="collapse" type="button">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <!-- Recent activity item -->
                        <div class="direct-chat-messages" id="name-search-item-container">
                            <div class="media text-muted pt-3">
                                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32">
                                    <title>Placeholder</title><rect width="100%" height="100%" fill="#6f42c1"/><text x="50%" y="50%" fill="#6f42c1" dy=".3em">32x32</text>
                                </svg>
                                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                    <strong class="d-block text-gray-dark">Name search <span class="float-right">23 Jan 2:00 pm</span></strong>
                                    <i>Saved/ Pending/ Assigned/ Has query/ Rejected/ Reserved</i>
                                </p>
                            </div>
                            <div class="media text-muted pt-3">
                                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32">
                                    <title>Placeholder</title><rect width="100%" height="100%" fill="#6f42c1"/><text x="50%" y="50%" fill="#6f42c1" dy=".3em">32x32</text>
                                </svg>
                                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                    <strong class="d-block text-gray-dark">Private limited company <span class="float-right">23 Jan 2:00 pm</span></strong>
                                    <i>Saved/ Pending/ Assigned/ Has query/ Rejected/ Reserved</i>
                                </p>
                            </div>
                            <div class="media text-muted pt-3">
                                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32">
                                    <title>Placeholder</title><rect width="100%" height="100%" fill="#6f42c1"/><text x="50%" y="50%" fill="#6f42c1" dy=".3em">32x32</text>
                                </svg>
                                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                    <strong class="d-block text-gray-dark">Name search <span class="float-right">23 Jan 2:00 pm</span></strong>
                                    <i>Saved/ Pending/ Assigned/ Has query/ Rejected/ Reserved</i>
                                </p>
                            </div>
                            <div class="media text-muted pt-3">
                                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32">
                                    <title>Placeholder</title><rect width="100%" height="100%" fill="#6f42c1"/><text x="50%" y="50%" fill="#6f42c1" dy=".3em">32x32</text>
                                </svg>
                                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                    <strong class="d-block text-gray-dark">Name search <span class="float-right">23 Jan 2:00 pm</span></strong>
                                    <i>Saved/ Pending/ Assigned/ Has query/ Rejected/ Reserved</i>
                                </p>
                            </div>
                        </div>
                        <!--/.recent activity item-->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <p class="text-muted">10 tasks</p>
                    </div>
                    <!-- /.card-footer-->
                </div>
                <!--/.direct-chat -->
            </div>
            <div class="col-lg-6"></div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ToastRScriptsPartial"/>
