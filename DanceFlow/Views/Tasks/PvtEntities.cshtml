<div class="col-md-9">
<div class="card card-info card-outline">
<div class="card-header">
    <h3 class="card-title">Details</h3>
</div>
<!-- /.card-header -->
<div class="card-body">
<div id="smartwizard" class="border-0" style="height: 100%">

<ul class="nav">
    <li class="nav-item">
        <a class="nav-link" href="#step-1">
            <strong>Office</strong>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#step-2">
            <strong>Memorandum of association</strong>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#step-3">
            <strong>Articles of association</strong>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link " href="#step-4">
            <strong>Share subcribers and secretary</strong>
        </a>
    </li>
</ul>

<div class="tab-content mt-4">

    <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
        <!-- form start -->
        <form role="form">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="physicalAddress">Physical address</label>
                        <input type="text" name="physicalAddress" class="form-control" id="physicalAddress" readonly>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="officeCity">City</label>
                        <input type="text" name="officeCity" class="form-control" id="officeCity" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="postalAddress">Postal address</label>
                        <input type="text" name="postalAddress" class="form-control" id="postalAddress" readonly>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="emailAddress">Email address</label>
                        <input type="email" name="emailAddress" class="form-control" id="emailAddress" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="telNumber">Telephone number</label>
                        <input type="tel" name="telNumber" class="form-control" id="telNumber" readonly>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="mobileNumber">Mobile number</label>
                        <input type="tel" name="mobileNumber" class="form-control" id="mobileNumber" readonly>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
        <div class="card card-info card-outline card-outline-tabs shadow-none">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="memorandum-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="memorandum-home-tab" data-toggle="pill" href="#memorandum-home" role="tab" aria-controls="memorandum-home" aria-selected="true">Objects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="memorandum-profile-tab" data-toggle="pill" href="#memorandum-profile" role="tab" aria-controls="memorandum-profile" aria-selected="false">Share and Liability clauses</a>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="tab-content" id="memorandum-tabContent">
                    <div class="tab-pane fade show active" id="memorandum-home" role="tabpanel" aria-labelledby="memorandum-home-tab">
                        <table id="tblObjects" class="table table-striped">
                            <thead>
                            <tr>
                                <th>Object</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="memorandum-profile" role="tabpanel" aria-labelledby="memorandum-profile-tab">
                        <!-- form begin -->
                        <form role="form" id="clausesForm">
                            <div class="form-group">
                                <label for="liabilityClause">Liability clause</label>
                                <input type="text" name="liabilityClause" class="form-control" id="liabilityClause" readonly>
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label for="shareClause">Share clause</label>
                                <input type="text" name="shareClause" class="form-control" id="shareClause" readonly>
                            </div>
                            <!-- /.form-group -->
                        </form>
                        <!-- /.form -->
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>


    <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
        <div class="card card-info card-outline card-outline-tabs shadow-none">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="articles-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="articles-home-tab" data-toggle="pill" href="#articles-home" role="tab" aria-controls="articles-home" aria-selected="true">Table of articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="articles-profile-tab" data-toggle="pill" href="#articles-profile" role="tab" aria-controls="articles-profile" aria-selected="false">Amended articles</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="custom-tabs-four-tabContent">
                    <div class="tab-pane fade show active" id="articles-home" role="tabpanel" aria-labelledby="articles-home-tab">
                        <form>

                            <div class="form-group">
                                <label for="tableOfArticles">Selected Table of Articles</label>
                                <input type="text" name="tableOfArticles" class="form-control" id="tableOfArticles" readonly>
                            </div>
                            <!-- /.form-group -->
                        </form>
                    </div>
                    <div class="tab-pane fade" id="articles-profile" role="tabpanel" aria-labelledby="articles-profile-tab">
                        <table id="tblArticles" class="table table-striped">
                            <thead>
                            <tr>
                                <th>Amended article</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>


    <div id="step-4" class="tab-pane" role="tabpanel" aria-labelledby="step-4">            
        <table id="tblPeople" class="table table-striped ">
            <thead>
            <tr>
                <th>Country</th>
                <th>National ID</th>
                <th>Surname</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Physical address</th>
                <th>Secretary</th>
                <th>Member</th>
                <th>Director</th>
                <th>Ordinary shares</th>
                <th>Preference shares</th>
                <th>Total shares</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

</div>

