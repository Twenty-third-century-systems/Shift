    <script type="text/javascript" src="~/js/pvt-entities/data-tables-conf.js"></script>
    <!-- pvt-entities script -->
    <script type="text/javascript" src="~/js/pvt-entities/pvt-entities.js"></script>
    <!-- signal-r configuration -->
    <script type="text/javascript" src="~/js/pvt-entities/signal-r-config.js"></script>
