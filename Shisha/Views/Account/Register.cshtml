@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="container-fluid">
    <form method="post" action="/Account/CreateExternalUser" id="registration-form">
        <div class="text-center mb-4">
                    <img class="mb-4" src="~/img/1200px-Coat_of_arms_of_Zimbabwe.png" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
                    @* <p>Build form controls with floating labels via the <code>:placeholder-shown</code> pseudo-element. <a href="https://caniuse.com/#feat=css-placeholder-shown">Works in latest Chrome, Safari, and Firefox.</a></p> *@
                </div>


        <div class="row mt-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name(s)</label>
                    <input type="text" class="form-control" name="names">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Surname</label>
                    <input type="text" class="form-control" name="surname">
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Country</label>
                    <select class="form-control select2" id="country" name="country">
                        @foreach (var value in ViewBag.Countries)
                        {
                            if (value.Name.Equals("Zimbabwe"))
                            {
                                <option selected value="@value.Code">@value.Name</option>
                            }
                            else
                            {
                                <option value="@value.Code">@value.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label id="idMode">National id</label>
                    <input type="text" class="form-control" name="nationalId">
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-8">
                <div class="form-group">
                    <label>Reidential Address</label>
                    <input type="text" class="form-control" name="residentialAddress">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>City</label>
                    <select class="form-control select2" id="city" name="city">
                        @foreach (var value in ViewBag.Cities)
                        {
                            if (value.Name.Equals("Harare"))
                            {
                                <option selected value="@value.Id">@value.Name</option>
                            }
                            else
                            {
                                <option value="@value.Id">@value.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Mobile number</label>
                    <input type="text" class="form-control" name="phoneNumber" id="phoneNumber">
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Confirm</label>
                    <input type="password" class="form-control" name="confirmPassword">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-sm btn-dark float-right" id="btn-done">Done</button>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <link rel="stylesheet" href="~/lib/intl-tel-input-master/build/css/intlTelInput.min.css"/>
    <script type="text/javascript" src="~/lib/intl-tel-input-master/build/js/intlTelInput-jquery.min.js"></script>
    <script type="text/javascript" src="~/js/regiser/register.js"></script>
    <script type="text/javascript" src="~/js/regiser/custom-validations.js"></script>
}