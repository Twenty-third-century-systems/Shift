@model LoginViewModel

<div class="login-page text-center w-50 justify-content-center align-items-center h-100">

    <partial name="_ValidationSummary"/>


    @if (Model.EnableLocalLogin)
    {
@*             <div class="col-sm-6"> *@
        <form asp-route="Login">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3>Sign in</h3>
                </div>

                <div class="card-body">

                    <input type="hidden" asp-for="ReturnUrl"/>

                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                    </div>
                    @if (Model.AllowRememberLogin)
                    {
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberLogin">
                                <label class="form-check-label" asp-for="RememberLogin">
                                    Remember My Login
                                </label>
                            </div>
                        </div>
                    }

                    <div>
                        <p>
                            <a href="/Account/Register">Sign up</a> if you don't have an account
                        </p>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-dark float-left" name="button" value="login">Login</button>
                    <button class="btn btn-dark float-right" name="button" value="cancel">Cancel</button>
                </div>
            </div>
        </form>
        // </div>
    }

