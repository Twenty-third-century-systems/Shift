<div class="row">
    <div class="col-md-4">
        <!-- Box Comment -->
        <div class="card card-widget">
            <div class="card-header">
                <div class="user-block">
                    <h3 class="card-title">
                        <small>Enter Liability and share clause</small>
                    </h3>
                </div>
                <!-- /.title -->
            </div>
            <!-- /.card-header -->
            <!-- form begin -->
            <form role="form" id="clausesForm">
                <div class="card-body">
                    <div class="form-group">
                        <label for="liabilityClause">Liability clause</label>
                        <input type="text" name="liabilityClause" class="form-control" id="liabilityClause">
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label for="shareClause">Share clause</label>
                        <input type="text" name="shareClause" class="form-control" id="shareClause">
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group">
                        <label for="shares">Repeat number of shares in digits</label>
                        <input type="text" name="shares" class="form-control" id="shares">
                    </div>
                    <!-- /.form-group -->
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-default btn-sm float-right"><i class="fas fa-clipboard-list"></i> Save</button>
                    <!-- /.submit button-->
                </div>
                <!-- /.card-footer -->
            </form>
            <!-- /.form -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
    <div class="col-md-8">
        <!-- /.card -->
        <!-- Box Comment -->
        <div class="card card-widget">
            <div class="card-header">
                <div class="user-block">
                    <h3 class="card-title">
                        <small>Objectives</small>
                    </h3>
                </div>
                <!-- /.title -->
                <button type="button" class="btn btn-default btn-sm float-right" data-toggle="modal" data-target="#modal-objective">
                    <i class="fas fa-plus"></i> Add
                </button>
            </div>
            <!-- /.card-header -->
            <!-- form begin -->

            <div class="card-body">
                <table id="tblObjects" class="table table-striped w-100">
                    <thead>
                    <tr>
                        <th>Objective</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-default btn-sm float-right" id="submitObjects"><i class="fas fa-clipboard-list"></i> Save</button>
                <!-- /.submit button-->
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>