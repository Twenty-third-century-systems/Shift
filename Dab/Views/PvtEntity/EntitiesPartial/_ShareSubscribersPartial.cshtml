<div class="card card-default">
    <!-- card-header -->
    <div class="card-header">
        <h3 class="card-title">
            <small>People</small>
        </h3>
        <button type="button" class="btn btn-default btn-sm float-right" data-toggle="modal" data-target="#modal-people">
            <i class="fas fa-plus"></i> Add
        </button>
    </div>

    <div class="card-body">
        <table id="tblPeople" class="table table-striped w-100">
            <thead>
            <tr>
                <th>Country</th>
                <th>National Id</th>
                <th>Surname</th>
                <th>Name(s)</th>
                <th>Gender</th>
                <th>Physical Address</th>
                <th>Secretary</th>
                <th>Member</th>
                <th>Director</th>
                <th>Ordinary shares</th>
