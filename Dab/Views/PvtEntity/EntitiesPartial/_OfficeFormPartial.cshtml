<div class="card card-widget">
    <div class="card-header">
        <h3 class="card-title">
            <small>Enter industry sector and office details.</small>
        </h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form" id="officeForm">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="physicalAddress">Industry sector</label>
                        <input type="text" name="industrySector" class="form-control" id="industrySector" required>
                    </div>
                </div>
                <div class="col-lg-6">
                    @* <div class="form-group"> *@
                    @*     <label for="physicalAddress">Physical address</label> *@
                    @*     <input type="text" name="physicalAddress" class="form-control" id="physicalAddress" required> *@
                    @* </div> *@
                </div>
                <hr class="w-100"/>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>With effect from</label>
                        <input type="date" class="form-control" name="effectiveFrom">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="physicalAddress">Physical address</label>
                        <input type="text" name="physicalAddress" class="form-control" id="physicalAddress" required>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="officeCity">City</label>
                        <input type="text" name="cityTown" class="form-control" id="officeCity">
                        @* @foreach (var value in ViewBag.Cities) *@
                        @* { *@
                        @*     if (value.Name.Equals("Harare")) *@
                        @*     { *@
                        @*         <option selected value="@value.Id">@value.Name</option> *@
                        @*     } *@
                        @*     else *@
                        @*     { *@
                        @*         <option value="@value.Id">@value.Name</option> *@
                        @*     } *@
                        @* } *@
                        @* </input> *@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="postalAddress">Postal address</label>
                        <input type="text" name="postalAddress" class="form-control" id="postalAddress">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="emailAddress">Email address</label>
                        <input type="email" name="emailAddress" class="form-control" id="emailAddress">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="telNumber">Telephone number</label>
                        <input type="tel" name="telephoneNumber" class="form-control" id="telNumber">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="mobileNumber">Mobile number</label>
                        <input type="tel" name="mobileNumber" class="form-control" id="mobileNumber">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-default btn-sm float-right"><i class="fas fa-clipboard-list"></i> Save</button>
            <!-- /.submit button-->
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->