<!-- office egistration -->
<div class="card card-widget">
    <div class="card-header">
        <h3 class="card-title">
            <small>Enter the office details of the Entity</small>
        </h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form" id="officeForm">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="physicalAddress">Physical address</label>
                        <input type="text" name="physicalAddress" class="form-control" id="physicalAddress" required>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="officeCity">City</label>
                        <select type="text" name="officeCity" class="form-control" id="officeCity">
                            @foreach (var value in ViewBag.Cities)
                            {
                                if (value.Name.Equals("Harare"))
                                {
                                    <option selected value="@value.Id">@value.Name</option>
                                }
                                else
                                {
                                    <option value="@value.Id">@value.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="postalAddress">Postal address</label>
                        <input type="text" name="postalAddress" class="form-control" id="postalAddress">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="emailAddress">Email address</label>
                        <input type="email" name="emailAddress" class="form-control" id="emailAddress">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="telNumber">Telephone number</label>
                        <input type="tel" name="telNumber" class="form-control" id="telNumber">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="mobileNumber">Mobile number</label>
                        <input type="tel" name="mobileNumber" class="form-control" id="mobileNumber">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-default btn-sm float-right"><i class="fas fa-clipboard-list"></i> Save</button>
            <!-- /.submit button-->
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->