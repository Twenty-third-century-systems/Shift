@{
    ViewBag.Title = "New Company Application";
    Layout = "_Layout";
}

<input type="hidden" id="applicationId" value="@ViewBag.ApplicationId"/>
<input type="hidden" id="pvtEntityId" value="@ViewBag.PvtEntityApplication"/>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">New Entity <small>(@ViewBag.NameRacho)</small></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Entities / <span class="text-muted">Private company reg</span></a>
                    </li>
                    @* <li class="breadcrumb-item active">Starter Page</li> *@
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div id="smartwizard" style="height: 100%">

    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" href="#step-1">
                <strong>Office</strong>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step-2">
                <strong>Memorandum of association</strong>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step-3">
                <strong>Articles of association</strong>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="#step-4">
                <strong>Share subcribers and secretary</strong>
            </a>
        </li>
    </ul>

    <div class="tab-content">

        <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
            <partial name="EntitiesPartial/_OfficeFormPartial"/>
        </div>

        <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
            <partial name="EntitiesPartial/_MemorandumOfAssociationPartial"/>
        </div>

        <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
            <partial name="EntitiesPartial/_ArticlesOfAssociationPartial"/>
        </div>

        <div id="step-4" class="tab-pane" role="tabpanel" aria-labelledby="step-4">
            <partial name="EntitiesPartial/_ShareSubscribersPartial"/>

        </div>

    </div>

</div>

<partial name="EntitiesDialoguePartials/_ObjectiveFormModalPartial"/>
<partial name="EntitiesDialoguePartials/_ArticleFormModalPartial"/>
<partial name="EntitiesDialoguePartials/_PeopleFormModalPartial"/>
<partial name="EntitiesDialoguePartials/_EntityFormModalPartial"/>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_StepWizardScriptsPartial"/>
    <partial name="_DataTablesScriptsPartial"/>
    <partial name="_ToastRScriptsPartal"/>
    <!-- Form to JSON serializer-->
    <script type="text/javascript" src="~/lib/serialize-form-into-JSON/dist/jquery.serializeToJSON.min.js"></script>
    <!-- new-entity-js -->
    <script type="text/javascript" src="~/js/new-entity/new-entity.js"></script>
    <!-- custom data-tables configuration -->
    <script type="text/javascript" src="~/js/new-entity/data-tables-conf.js"></script>
    <!-- custom validations for address form -->
    <script type="text/javascript" src="~/js/new-entity/custom-validations.js"></script>
    <!-- custom smart-wizard configuration -->
    <script type="text/javascript" src="~/js/new-entity/step-wizard-conf.js"></script>
    <!-- application-reload -->
    
    @* <script type="text/javascript" src="~/js/new-entity/application-reload.js"></script> *@
}