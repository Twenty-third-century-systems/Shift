@{
    ViewBag.Title = "New name search";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluId">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">New name search</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Name search / <span class="text-muted">New name search</span></a>
                    </li>
                    @* <li class="breadcrumb-item active">Starter Page</li> *@
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluId -->
</div>
<!-- /.content-header -->

<form id="name-search-form">
    <div class="row">
        <div class="col-lg-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Name search details</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Reason for search </label>
                        <select class="form-control select2" name="reason">
                            <option selected="selected"></option>
                            @foreach (var value in ViewBag.Defaults.Reasons)
                            {
                                <option value="@value.Id">@value.Value</option>
                            }
                        </select>
                    </div>
                    <!-- /.form-group -->

                    <div class="form-group">
                        <label>Type of entity </label>
                        <select class="form-control select2" name="type">
                            <option selected="selected"></option>
                            @foreach (var value in ViewBag.Defaults.Types)
                            {
                                <option value="@value.Id">@value.Value</option>
                            }
                        </select>
                    </div>
                    <!-- /.form-group -->

                    <div class="form-group">
                        <label>Designation </label>
                        <select class="form-control select2" name="designation">
                            <option selected="selected"></option>
                            @foreach (var value in ViewBag.Defaults.Designations)
                            {
                                <option value="@value.Id">@value.Value</option>
                            }
                        </select>
                    </div>
                    <!-- /.form-group -->

                    <div class="form-group">
                        <label>Sorting office </label>
                        <select class="form-control select2" name="office">
                            <option selected="selected"></option>
                            @foreach (var value in ViewBag.Defaults.Sorters)
                            {
                                <option value="@value.Id">@value.Value</option>
                            }
                        </select>
                    </div>
                    <!-- /.form-group -->

                    <!-- Justification -->
                    <div class="form-group">
                        <label>Justification:</label>
                        <input type="text" class="form-control" name="justification">
                    </div>
                    <!-- /.form group -->
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>


        <div class="col-lg-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Names</h3>
                </div>
                <div class="card-body">
                    <!-- First choice -->
                    <div class="form-group">
                        <label>First choice:</label>
                        <input type="text" class="form-control" name="name1">
                    </div>
                    <!-- /.form group -->

                    <!-- Second choice -->
                    <div class="form-group">
                        <label>Second choice:</label>
                        <input type="text" class="form-control" name="name2">
                    </div>
                    <!-- /.form group -->

                    <!-- Third choice -->
                    <div class="form-group">
                        <label>Third choice:</label>
                        <input type="text" class="form-control" name="name3">
                    </div>
                    <!-- /.form group -->

                    <!-- Fourth choice -->
                    <div class="form-group">
                        <label>Fourth choice:</label>
                        <input type="text" class="form-control" name="name4">
                    </div>
                    <!-- /.form group -->

                    <!-- Fifth choice -->
                    <div class="form-group">
                        <label>Fifth choice:</label>
                        <input type="text" class="form-control" name="name5">
                    </div>
                    <!-- /.form group -->
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- done -->
            <div class="float-right">
                <button type="submit" class="btn btn-info pull-right">Done</button>
            </div>
            
            <!-- /.done -->
        </div>

        <!-- /.column -->

    </div>
</form>

<partial name="_NameSearchConfirmDialogue"/>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_ToastRScriptsPartal"/>
    <!-- form to json --> 
    <script type="text/javascript" src="~/lib/form-data-json-object/src/formToJson.min.js"></script>
    <!-- custom validation -->
    <script type="text/javascript" src="~/js/new-name-search/custom-validation.js"></script>
    <!-- name search modal -->
    <script type="text/javascript" src="~/js/new-name-search/name-search-modal.js"></script>
}