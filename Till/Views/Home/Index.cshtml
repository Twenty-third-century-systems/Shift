@{
    ViewBag.Title = "DCIP || Payments";
}

<div class="text-center">
    <h1 class="display-4">Mutengi</h1>
    <p>Account history.</p>
</div>

<div class="row">
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-info elevation-1">
                <i class="fas fa-signature"></i>
            </span>

            <div class="info-box-content">
                <span class="info-box-text">Name search credits</span>
                <span class="info-box-number">
                    <small><b>0</b></small>
                </span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    
    <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
                <span class="info-box-icon bg-info elevation-1">
                    <i class="fas fa-building"></i>
                </span>
    
                <div class="info-box-content">
                    <span class="info-box-text">Pvt Ltd Entity credits</span>
                    <span class="info-box-number">
                        <small><b>0</b></small>
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
</div>

<div class="card" style="flex: 1;
  overflow: auto;">
    <div class="card-header border-0">
        <h3 class="card-title">Transactions</h3>
    </div>
    <div class="card-body table-responsive p-0" style="overflow: auto">
        <table class="table table-striped table-valign-middle">
            <col style="width:15%">
            <col style="width:55%">
            <col style="width:15%">
            <col style="width:15%">
            <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Dr. (ZWL)</th>
                <th>Cr. (ZWL)</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>

                    Some Product
                </td>
                <td>

                    Some Product
                </td>
                <td>$13 USD</td>
                <td>
                    <small class="text-success mr-1">
                        12%
                    </small>
                    12,000 Sold
                </td>
            </tr>
            <tr>
                <td>

                    Another Product
                </td>
                <td>

                    Some Product
                </td>
                <td>$29 USD</td>
                <td>
                    <small class="text-warning mr-1">

                        0.5%
                    </small>
                    123,234 Sold
                </td>

            </tr>
            <tr>
                <td>

                    Amazing Product
                </td>
                <td>

                    Some Product
                </td>
                <td>$1,230 USD</td>
                <td>
                    <small class="text-danger mr-1">

                        3%
                    </small>
                    198 Sold
                </td>

            </tr>
            <tr>
                <td>

                    Perfect Item
                    <span class="badge bg-danger">NEW</span>
                </td>
                <td>

                    Some Product
                </td>
                <td>$199 USD</td>
                <td>
                    <small class="text-success mr-1">

                        63%
                    </small>
                    87 Sold
                </td>

            </tr>
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <div class="float-right">
            <button type="submit"
                    class="btn btn-info pull-right"
                    id="btn-done" data-toggle="modal"
                    data-target="#modal-lg">
                Make payment
            </button>
        </div>
    </div>
</div>

<partial name="_PaymentModalPartial"/>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <!-- Form to JSON serializer-->
    <script type="text/javascript" src="~/lib/serialize-form-into-JSON/dist/jquery.serializeToJSON.min.js"></script>
}