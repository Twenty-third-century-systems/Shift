@model object

@{
    ViewBag.Title = "Price list";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">DCIP - Companies</h1>
</div>

<div class="card" style="flex: 1;overflow: auto;height: 50%">
    <div class="card-header border-0">
        <h3 class="card-title"></h3>
    </div>

    @if (ViewBag.PriceList.Count > 0)
    {
        <div class="card-body table-responsive p-0" style="max-height: calc(100vh - 400px);overflow-y: auto;">
            <table class="table table-striped table-valign-middle">
                <col style="width:85%">
                <col style="width:15%">
                <thead>
                <tr>
                    <th>Service</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                @if (ViewBag.PriceList.Count > 0)
                {
                    @foreach (var price in ViewBag.PriceList)
                    {
                        <tr>
                            <td>

                                @price.Service
                            </td>
                            <td>

                                @price.Price
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    }
</div>
